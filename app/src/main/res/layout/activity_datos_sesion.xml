<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_datos_sesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.unav.vivirsano.datosSesion">

    <TextView
        android:text="Datos IMC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"
        android:textSize="25dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:contentDescription="@string/app_name"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:background="@drawable/playstore_icon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="170dp"
        android:layout_height="171dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/layoutCentro"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Estatura (m):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/estatura"
            android:hint="ejemplo: 1.68"
            android:textColorHint="@color/primeroc"/>

        <TextView
            android:text="Peso (Kg):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/peso"
            android:inputType="text"
            android:hint="ejemplo: 56"
            android:textColorHint="@color/primeroc"/>
    </LinearLayout>

    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calcularImc"
        android:onClick="calculo"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"
        android:layout_alignParentBottom="true"/>






</RelativeLayout>
