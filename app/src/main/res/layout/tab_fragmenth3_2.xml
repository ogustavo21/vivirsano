<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/cardView"
        android:layout_alignStart="@+id/cardView"
        android:id="@+id/cardView2"
        app:contentPadding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/terceroh"
            android:textSize="15dp"
            android:text="@string/actividad"
            android:id="@+id/textView41" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actividadh3"
                android:textAlignment="center"
                android:layout_margin="25dp"
                android:layout_weight="0.50"
                android:id="@+id/textView7" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:background="@drawable/c1_3" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:id="@+id/cardView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="25dp"
            android:text="@string/materialh3"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/terceroh"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:text="@string/materiales"
            android:id="@+id/textView4" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/plato"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="40dp"/>
    </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>